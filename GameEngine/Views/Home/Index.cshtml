@using GameEngine.Settings
@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home Page";
}

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Games!</h4>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
            <div class="col-lg-3 col-md-6">



                <a class="card border-2 rounded-4 overflow-hidden mb-3 hover-zoom text-decoration-none" style="height: 450px; transition: transform 0.4s ease; border-color: indigo;"
                   asp-controller="Games"
                   asp-action="Details"
                   asp-route-id="@game.Id">


                    <img src="@($"{FileSettings.ImagesPath}/{game.Cover}")" class="card-img-top" alt="@game.Name"
                         style="width: 100%; height: 360px; object-fit: cover;">

                    <span class="badge bg-success rounded-0 fs-5">
                        @game.Category.Name
                    </span>

                    <div class="card-body d-flex justify-content-between align-items-center px-3 py-2">

                        @{
                            string displayName = game.Name.Length > 16 ? game.Name.Substring(0, 14) + "..." : game.Name;
                        }

                        <span class="card-title fw-bold fs-5 mb-0">@displayName</span>

                       <div class="d-flex align-items-center">
                            @foreach (var gameDevice in game.Devices)
                            {
                                <i class="@gameDevice.Device.Icon ms-2 fs-5"></i>
                            }
                       </div>                      
                    </div>
                </a>

                <br />

            </div>
        }
    </div>
}




<style>
    .hover-zoom:hover {
        transform: scale(1.05); /* Zoom in */
        z-index: 10;
        position: relative;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3); /* Optional shadow effect */
    }
</style>

