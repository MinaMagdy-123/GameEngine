<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameEngine</title>
    <script type="importmap"></script>
    <!-- Place the JSON-LD script here -->
    <script type="application/ld+json">
        @Html.Raw(@"
        {
                ""@context"": ""https://schema.org"",
                ""@type"": ""Organization"",
                ""url"": ""http://localhost:5029"",
                ""logo"": ""~/ images / gamepad.svg"",
                ""name"": ""GameEngine""
                }
        ")
    </script>

    <link rel="icon" href="~/images/gamepad.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap">
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameEngine.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: indigo;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/gamepad.svg" width="50px" hight="35px" /></a>
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">GameEngine</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                        </li>

                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Games" asp-action="Index">Games</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="OrdersAndItems" asp-action="Index">Orders</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="ShoppingCarts" asp-action="Index">ShoppingCart</a>
                            </li>
                        }

                    </ul>

                    <!-- Search -->
                    <form class="d-flex me-5" role="search" method="get" asp-controller="Home" asp-action="Search">
                        <input class="form-control me-2" type="search" name="gameName" placeholder="Search" />
                        <button class="d-flex btn btn-success align-items-center" type="submit">
                            <i class="bi bi-search me-1"></i> Search
                        </button>
                    </form>


                    <!-- Login/Register/Logout Section -->
                    <div class="d-flex ms-5 align-items-center">
                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <span class="me-4 text-white">Welcome, @User.Identity.Name</span>

                            <a asp-controller="Accounts" asp-action="Logout" class="btn btn-danger">
                                Logout
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Accounts" asp-action="Login" class="btn btn-primary me-2">
                                Login
                            </a>

                            <a asp-controller="Accounts" asp-action="Register" class="btn btn-warning">
                                Sign Up
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BrightStars - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>